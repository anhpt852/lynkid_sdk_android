<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PinWidget" />

    <style name="PinWidget.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/view_invisible</item>
        <item name="android:textSelectHandle">@drawable/view_invisible</item>
        <item name="android:textSelectHandleLeft">@drawable/view_invisible</item>
        <item name="android:textSelectHandleRight">@drawable/view_invisible</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
    </style>
</resources>