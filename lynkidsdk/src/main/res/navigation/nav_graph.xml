<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.linkid.sdk.splash.ui.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_authFragment"
            app:destination="@id/authFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.linkid.sdk.home.ui.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_allGiftFragment"
            app:destination="@id/allGiftFragment" />
    </fragment>
    <fragment
        android:id="@+id/allGiftFragment"
        android:name="com.linkid.sdk.all_gift.ui.AllGiftFragment"
        android:label="AllGiftFragment"
        tools:layout="@layout/fragment_all_gift"/>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.linkid.sdk.auth.ui.AuthFragment"
        android:label="AuthFragment"
        tools:layout="@layout/fragment_auth"  >
        <action
            android:id="@+id/action_authFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>